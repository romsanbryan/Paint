<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dam.romsanbryan.paint.MainActivity">


    <include layout="@layout/content_settings"  />

    <LinearLayout
        android:layout_width="105dp"
        android:layout_height="match_parent"
        android:background="@color/ajustes"
        android:orientation="vertical">

        <Button
            android:id="@+id/pref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/setting"
            />

        <Button
            android:id="@+id/bt_reciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recientes" />

        <Button
            android:id="@+id/bt_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/abrir" />

        <Button
            android:id="@+id/bt_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nuevo" />

        <Button
            android:id="@+id/goma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/goma" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/mas"
                android:layout_width="37dp"
                android:layout_height="38dp"
                android:background="@android:drawable/arrow_up_float" />
            <ImageView
                android:id="@+id/pincel"
                android:layout_width="37dp"
                android:layout_height="38dp"
                android:background="@mipmap/lapiz" />

            <Button
                android:id="@+id/menos"
                android:layout_width="37dp"
                android:layout_height="38dp"
                android:background="@android:drawable/arrow_down_float" />

        </LinearLayout>


        <Button
            android:id="@+id/bt_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/save" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_color1"
                android:layout_width="26dp"
                android:layout_height="38dp"
                android:layout_margin="3dp"
                android:layout_weight="0"
                android:background="@color/verde" />

            <Button
                android:id="@+id/bt_color2"
                android:layout_width="26dp"
                android:layout_height="38dp"
                android:layout_margin="3dp"
                android:background="@color/amarillo" />

            <Button
                android:id="@+id/bt_color3"
                android:layout_width="26dp"
                android:layout_height="38dp"
                android:layout_margin="3dp"
                android:background="@color/rojo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_color4"
                android:layout_width="26dp"
                android:layout_height="38dp"
                android:layout_margin="3dp"
                android:background="@color/azul" />

            <Button
                android:id="@+id/bt_color5"
                android:layout_width="26dp"
                android:layout_height="38dp"
                android:layout_margin="3dp"
                android:background="@color/magenta" />

            <Button
                android:id="@+id/bt_color6"
                android:layout_width="26dp"
                android:layout_height="38dp"
                android:layout_margin="3dp"
                android:background="@color/negro" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_camara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/photo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="105dp" >
        <dam.romsanbryan.paint.LienzoDibujo
            android:id="@+id/lienzoDibujo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

    </LinearLayout>

</RelativeLayout>
